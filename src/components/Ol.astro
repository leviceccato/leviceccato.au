---
import { clampVw } from '../utils/misc'
import Container from './Container.astro'
---

<Container>
	<ol
		class="list"
		style={{
			'--olGap': clampVw(7, 15),
		}}
	>
		<slot />
	</ol>
</Container>

<style>
	.list {
		counter-reset: counter;
		display: flex;
		flex-direction: column;
		gap: var(--olGap);
	}
</style>
