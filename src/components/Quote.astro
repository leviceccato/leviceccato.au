---
import { clampVw } from '../utils/misc'
import Container from './Container.astro'
import Text from './Text.astro'
---

<Container>
	<blockquote
		class="quote"
		style={{ '--quoteFontSize': clampVw(17, 19) }}
	>
		<Text><slot /></Text>
	</blockquote>
</Container>

<style>
	.quote {
		padding-inline-start: 1.1em;
		position: relative;
		line-height: 1.45;
		font-size: var(--quoteFontSize);
	}

	.quote::before {
		content: '';
		position: absolute;
		inset: 0.2em auto 0.15em 0;
		width: 2px;
		background-color: currentColor;
	}
</style>
