{
	"private": true,
	"scripts": {
		"start": "astro dev",
		"build": "astro check && tsc --noEmit && astro build",
		"preview": "astro preview"
	},
	"prettier": {
		"useTabs": true,
		"semi": false,
		"singleQuote": true,
		"trailingComma": "all",
		"singleAttributePerLine": true,
		"plugins": [
			"prettier-plugin-astro"
		],
		"overrides": [
			{
				"files": "*.astro",
				"options": {
					"parser": "astro"
				}
			}
		]
	},
	"devDependencies": {
		"@astrojs/check": "^0.2.0",
		"astro": "^3.0.7",
		"prettier-plugin-astro": "^0.12.0",
		"smartypants": "^0.2.2",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"modern-normalize": "^2.0.0"
	}
}
